// Using Prefix and Suffix solution where we have Prefix and Suffix:

class Solution {
    public int[] productExceptSelf(int[] nums) {
        int l = nums.length;
        int[] left = new int[l];
        int[] right = new int[l];
        left[0] = 1;
        right[l-1] = 1;

        for(int i = 1; i < l; i++) {
            left[i] = nums[i-1] * left[i-1];
        }
        for(int i = l-2; i >= 0; i--) {
            right[i] = nums[i+1] * right[i+1];
        }

        for(int i = 0; i < l; i++) {
            nums[i] = left[i] * right[i];
        }
        return nums;
    }
}  



// Using O(1) space complexity

class Solution {
    public int[] productExceptSelf(int[] nums) {
        int n = nums.length;
        int[] result = new int[n];

        // Step 1: left products
        result[0] = 1;
        for (int i = 1; i < n; i++) {
            result[i] = result[i - 1] * nums[i - 1];
        }

        // Step 2: right products (on the fly)
        int right = 1;
        for (int i = n - 1; i >= 0; i--) {
            result[i] *= right;
            right *= nums[i];
        }

        return result;
    }
}
